@{
    ViewData["Title"] = "CrecheConnect PayFast Test";
}

<div style="max-width:500px;margin:40px auto;font-family:Arial;padding:20px;border:1px solid #ddd;border-radius:8px;">
    <h2>PayFast Test Payment</h2>
    <p>Use this page to test your PayFast integration.</p>

    @if (ViewBag.Error != null)
    {
        <div style="color:red">@ViewBag.Error</div>
    }

    <form asp-action="Pay" method="post" style="margin-top:20px;">
        <label for="name">Name</label><br />
        <input type="text" name="name" placeholder="Parent Name" required style="width:100%;padding:8px;margin-bottom:10px;" />

        <label for="email">Email</label><br />
        <input type="email" name="email" placeholder="parent@example.com" required style="width:100%;padding:8px;margin-bottom:10px;" />

        <label for="amount">Amount (ZAR)</label><br />
        <input type="number" name="amount" step="0.01" min="1" value="350.00" style="width:100%;padding:8px;margin-bottom:10px;" />

        <label for="description">Description</label><br />
        <input type="text" name="description" value="Creche Fees" style="width:100%;padding:8px;margin-bottom:20px;" />

        <button type="submit" style="width:100%;padding:10px;background-color:#3b82f6;color:white;border:none;border-radius:4px;">
            Proceed to PayFast
        </button>
    </form>
</div>
